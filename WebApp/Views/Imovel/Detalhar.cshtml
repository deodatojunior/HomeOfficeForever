@model WebApp.Models.ImovelViewModel

@{
    ViewData["Title"] = "Detalhar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalhar</h1>

<div>
    <h4>Imovel</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            Nome da cidade
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.cidade)
        </dd>
        <dt class="col-sm-2">
            Nome do bairro
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.bairro)
        </dd>
        <dt class="col-sm-2">
            Quantidade de quartos
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.quantidade)
        </dd>
        <dt class="col-sm-2">
            Valor do aluguel
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.valor)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Alterar", "Alterar", new { id = Model.id }) |
    <a asp-action="Index">Voltar</a>
</div>